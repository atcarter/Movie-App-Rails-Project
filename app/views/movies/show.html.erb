<h1><%= link_to @movie.format, movie_reviews_path(@movie) %></h1>
<h3><%= link_to @movie.genre.name, genre_path(@movie.genre)%></h3>
<p><%= @movie.synopsis %></p>

<% if admin? %>
  <%= link_to "Edit Movie", edit_movie_path(@movie) %>
  
  <br><br>
  <%= button_to "Delete Movie", movie_path(@movie), method: :delete %>
<% end %>